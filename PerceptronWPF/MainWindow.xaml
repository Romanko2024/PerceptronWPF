<Window x:Class="PerceptronWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Персептрон" Height="720" Width="1000">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--ліва панель (кнопки ввід)-->
        <StackPanel Grid.Column="0" Margin="4" VerticalAlignment="Stretch">
            <TextBlock Text="Навчальні дані (X1, X2, Label)" FontWeight="Bold" />
            <DataGrid x:Name="dgSamples" AutoGenerateColumns="False" Height="200" CanUserAddRows="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="X1" Binding="{Binding X1, Mode=TwoWay}" />
                    <DataGridTextColumn Header="X2" Binding="{Binding X2, Mode=TwoWay}" />
                    <DataGridTextColumn Header="Label (1 або -1)" Binding="{Binding Label, Mode=TwoWay}" />
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" Margin="0,6,0,6">
                <Button x:Name="btnLoadExample" Content="Завантажити приклад" Click="BtnLoadExample_Click" Width="140"/>
                <Button x:Name="btnClear" Content="Очистити" Click="BtnClear_Click" Width="140" Margin="6,0,0,0"/>
            </StackPanel>

            <TextBlock Text="Параметри навчання" FontWeight="Bold" />
            <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                <TextBlock Text="Learning rate:" VerticalAlignment="Center" Margin="0,0,6,0" />
                <TextBox x:Name="tbLearningRate" Text="0.1" Width="60" />
                <TextBlock Text="Епохи:" VerticalAlignment="Center" Margin="10,0,6,0" />
                <TextBox x:Name="tbEpochs" Text="100" Width="60" />
            </StackPanel>

            <TextBlock Text="Режими" FontWeight="Bold" />
            <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                <Button x:Name="btnStep" Content="Крок" Click="BtnStep_Click" Width="85"/>
                <Button x:Name="btnStartTimer" Content="Старт таймер" Click="BtnStartTimer_Click" Width="100" Margin="6,0,0,0"/>
                <Button x:Name="btnStop" Content="Стоп" Click="BtnStop_Click" Width="85" Margin="6,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                <TextBlock Text="Інтервал (мс):" VerticalAlignment="Center" />
                <TextBox x:Name="tbInterval" Text="500" Width="80" Margin="6,0,0,0" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                <Button x:Name="btnAuto" Content="Автоматично" Click="BtnAuto_Click" Width="140"/>
                <Button x:Name="btnReset" Content="Скинути ваги" Click="BtnReset_Click" Width="140" Margin="6,0,0,0"/>
            </StackPanel>

            <TextBlock Text="Поточні параметри" FontWeight="Bold" Margin="0,8,0,0" />
            <TextBlock x:Name="tbWeights" Text="W1: ---  W2: ---  Bias: ---" />
            <TextBlock x:Name="tbInfo" Text="Інформація: готовий" TextWrapping="Wrap" />

            <Separator Margin="6" />
            <TextBlock Text="Тестування" FontWeight="Bold" />
            <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                <TextBox x:Name="tbTestX1" Width="70" Text="0" />
                <TextBox x:Name="tbTestX2" Width="70" Text="0" Margin="6,0,0,0" />
                <Button x:Name="btnTest" Content="Тест" Click="BtnTest_Click" Width="80" Margin="6,0,0,0" />
            </StackPanel>
            <TextBlock x:Name="tbTestResult" Text="Результат: -" />

        </StackPanel>

        <!-- права панель с графіками-->
        <Grid Grid.Column="1" Margin="8,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" CornerRadius="6">
                <Canvas x:Name="canvasData" Background="White" />
            </Border>

            <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Margin="0,8,0,0">
                <Canvas x:Name="canvasError" Background="White" Height="200" />
            </Border>
        </Grid>

    </Grid>
</Window>
